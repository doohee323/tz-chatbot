    {
      "parameters": {
        "jsCode": "const items = $input.all();\nconst region = items[0]?.json?.region || '서울';\nconst email = items[0]?.json?.email || 'doohee323@gmail.com';\nlet newsText = '';\nfor (const item of items) {\n  const body = item.json?.body || item.binary?.data?.toString('utf-8') || '';\n  const titles = body.match(/<title>[^<]+<\\/title>/g) || [];\n  const links = body.match(/<link>[^<]+<\\/link>/g) || [];\n  for (let i = 0; i < Math.min(15, titles.length); i++) {\n    const t = (titles[i] || '').replace(/<\\/?title>/g, '').trim();\n    const l = (links[i + 1] || links[i] || '').replace(/<\\/?link>/g, '').trim();\n    if (t && t !== 'Google News') newsText += (i + 1) + '. ' + t + '\\n   ' + l + '\\n';\n  }\n}\nif (!newsText) newsText = 'No articles found for region: ' + region;\nreturn [{ json: { region, email, newsText, itemCount: newsText.split('\\n').filter(x => /^\\d+\\./.test(x)).length } }];"
      },
